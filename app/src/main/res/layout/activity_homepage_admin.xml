<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#7E7878">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/homepage"
                android:textColor="#FF000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/notificationBell"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="goToNotifications"
                android:src="@drawable/notifications" />
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Greeting Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#242424"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- Monthly Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly progress"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSubmittedTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Need of Review Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need of Review"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnNeedReview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#ffffff"
            android:clickable="true"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Bottom Navigation Bar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="6dp"
        android:background="#7E7878"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:contentDescription="@string/home_icon"
            android:onClick="goToHome"
            android:src="@drawable/homepage" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:contentDescription="@string/tasks_view_icon"
            android:onClick="goToTaskView"
            android:src="@drawable/task" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:contentDescription="@string/analytics_icon"
            android:onClick="goToAnalytics"
            android:src="@drawable/analytics" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:contentDescription="@string/schedule_icon"
            android:onClick="goToCalendar"
            android:src="@drawable/schedule" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:contentDescription="@string/profile_icon"
            android:onClick="goToProfile"
            android:src="@drawable/profile" />
    </LinearLayout>

</LinearLayout>
